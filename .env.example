# Configuración de Variables de Entorno
# Copia este archivo como .env.local y configura las variables necesarias

# =============================================================================
# MEDUSA BACKEND (REQUERIDO)
# =============================================================================
MEDUSA_BACKEND_URL=http://localhost:9000
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=pk_tu-publishable-key-aqui

# =============================================================================
# ALGOLIA SEARCH (OPCIONAL)
# Solo necesario si planeas usar Algolia para búsqueda y filtrado avanzado
# =============================================================================
ALGOLIA_APP_ID=tu-app-id-aqui
ALGOLIA_WRITE_API_KEY=tu-write-api-key-aqui
ALGOLIA_PRODUCTS_INDEX=products
ALGOLIA_CATEGORIES_INDEX=categories
ALGOLIA_REVIEWS_INDEX=reviews

# =============================================================================
# PAYLOAD CMS (OPCIONAL)
# Solo necesario si usas Payload CMS para gestión de contenido
# =============================================================================
PAYLOAD_SECRET=tu-secret-de-minimo-32-caracteres-aqui-para-payload-cms-security
PAYLOAD_DATABASE_URL=postgresql://usuario:password@localhost:5432/payload_db
PAYLOAD_SERVER_URL=http://localhost:3000
PAYLOAD_API_KEY=tu-api-key-payload-aqui

# =============================================================================
# BYTESCALE (OPCIONAL)
# Solo necesario si usas Bytescale para subida de archivos con Payload
# Si configuras uno, debes configurar todos
# =============================================================================
BYTESCALE_API_KEY=tu-bytescale-api-key
BYTESCALE_ACCOUNT_ID=tu-account-id
BYTESCALE_PREFIX=/payload-uploads

# =============================================================================
# SEGURIDAD Y DEPLOYMENT
# =============================================================================
CRON_SECRET=tu-secret-para-proteger-endpoint-sync
LIVE_URL=https://tu-dominio.com

# =============================================================================
# SHOPIFY (OPCIONAL)
# Solo si necesitas integración con Shopify
# =============================================================================
SHOPIFY_STORE_DOMAIN=tu-tienda.myshopify.com
SHOPIFY_STOREFRONT_ACCESS_TOKEN=tu-storefront-token
SHOPIFY_ADMIN_ACCESS_TOKEN=tu-admin-token
SHOPIFY_APP_API_SECRET_KEY=tu-app-secret

# =============================================================================
# INTEGRACIONES TERCEROS (OPCIONAL)
# =============================================================================
# Reviews con Judge.me
JUDGE_BASE_URL=https://judge.me/api/v1
JUDGE_API_TOKEN=tu-judge-api-token

# IA/ML Features
OPENAI_API_KEY=tu-openai-key
REPLICATE_API_KEY=tu-replicate-key

# Analytics
GTM_ID=GTM-XXXXXXX
IS_VERCEL_ANALYTICS_ENABLED=true
IS_GTM_ENABLED=true
IS_SPEED_INSIGHTS_ENABLED=true

# =============================================================================
# CONFIGURACIONES DE DESARROLLO
# =============================================================================
# Variables para desarrollo local
NODE_ENV=development
SKIP_ENV_VALIDATION=false
VERCEL_FIREWALL_DEV_HOST=localhost:3000